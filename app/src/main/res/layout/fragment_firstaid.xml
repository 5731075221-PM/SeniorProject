<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relaFirstaid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firstaid"
    tools:context="com.example.uefi.seniorproject.firstaid.FirstaidFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <pl.droidsonroids.gif.GifImageView
                android:id="@+id/gifD"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@drawable/doctoranimcrop"
                android:scaleType="center"
                tools:layout_editor_absoluteX="192dp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/gifD"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/head"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/round_border_up"
                android:gravity="center"
                android:padding="7dp"
                android:text="ตา หู คอ"
                android:textColor="@color/firstaid"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/body"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border_between"
                android:gravity="center"
                android:padding="7dp"
                android:text="กล้ามเนื้อ กระดูก ลำไส้"
                android:textColor="@color/firstaid"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/fire"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border_between"
                android:gravity="center"
                android:padding="7dp"
                android:text="แผลไหม้ น้ำร้อนลวก"
                android:textColor="@color/firstaid"
                android:textSize="17sp" />


            <TextView
                android:id="@+id/poison"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border_between"
                android:gravity="center"
                android:padding="7dp"
                android:text="พิษ สารพิษ"
                android:textColor="@color/firstaid"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/normal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/round_border_down"
                android:gravity="center"
                android:padding="7dp"
                android:text="เบ็ดเตล็ด"
                android:textColor="@color/firstaid"
                android:textSize="17sp" />

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
