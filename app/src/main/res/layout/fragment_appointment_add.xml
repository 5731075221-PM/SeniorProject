<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:clickable="true"
    tools:context="com.example.uefi.seniorproject.reminder.ReminderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_date"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?android:attr/selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <ImageView
                android:id="@+id/imageView12"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="false"
                android:src="@drawable/calendar" />

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="false"
                android:src="@drawable/hospital" />

            <EditText
                android:id="@+id/editTextHospital"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="@drawable/textbox"
                android:hint="โรงพยาบาล"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/cardview_dark_background"
                android:textCursorDrawable="@null"
                android:textSize="24sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="?android:attr/selectableItemBackground"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="false"
                android:src="@drawable/clocktime" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="เวลานัด"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/dateBed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:gravity="right"
                android:text="22:00 น."
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.25"
                android:clickable="false"
                android:src="@drawable/ic_action_keyboard_arrow_right" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="2.5">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:clickable="false"
                android:src="@drawable/clock" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.75"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="แจ้งเตือน"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="24sp" />


            <ImageView
                android:id="@+id/info"
                android:layout_width="0dp"
                android:layout_height="20dp"
                android:layout_gravity="center_vertical"
                android:layout_toRightOf="@+id/textView6"
                android:layout_weight="0.25"
                android:src="@drawable/ic_action_info_outline" />

            <Switch
                android:id="@+id/switchAlert"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingRight="25dp"
                android:textColor="@color/cardview_dark_background"
                android:textSize="24sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/second_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="บันทึก"
            android:textColor="@color/cardview_light_background"
            android:textSize="26sp" />

    </LinearLayout>

</RelativeLayout>
