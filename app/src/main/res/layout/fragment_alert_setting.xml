<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:clickable="true"
    tools:context="com.example.uefi.seniorproject.reminder.ReminderFragment">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/add"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/breakfast"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/icons_breakfast" />

            <TextView
                android:id="@+id/textView1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="อาหารเช้า"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateBreakfast"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:text="07:00 น."
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lunch"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView10"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/icons_lunch" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="อาหารกลางวัน"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateLunch"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:text="12:00 น."
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/dinner"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/icons_dinner" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="อาหารเย็น"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateDinner"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:text="17:00 น."
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bed"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:orientation="horizontal"
            android:weightSum="4">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:clickable="false"
                android:src="@drawable/icons_bed" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:text="ก่อนนอน"
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/dateBed"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1.5"
                android:background="@android:color/transparent"
                android:backgroundTint="@color/nav_bar"
                android:clickable="false"
                android:editable="false"
                android:focusable="false"
                android:text="22:00 น."
                android:textColor="@color/cardview_dark_background"
                android:textColorLink="@color/nav_bar"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="8sp"
            android:paddingLeft="10dp"
            android:text="แจ้งเตือนก่อนถึงเวลารับประทานอาหาร 45 นาที \nแจ้งเตือนหลังเวลารับประทานอาหาร 30 นาที \nแจ้งเตือนก่อนเวลาเข้านอน 30 นาที "
            android:textColor="@color/cardview_dark_background"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/add"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:background="@color/second_bar"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/kanit_light"
            android:gravity="center"
            android:text="บันทึก"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />

    </LinearLayout>

</RelativeLayout>
