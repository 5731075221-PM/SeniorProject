<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linear_choice"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_light_background"
    android:clickable="true"
    tools:context="com.example.uefi.seniorproject.reminder.ReminderFragment">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="5dp"
                    android:text="ตั้งค่าเวลารับประทานยา"
                    android:textColor="@color/colorPrimaryDark" />

                <ImageView
                    android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/textView6"
                    android:src="@drawable/ic_action_info_outline" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/breakfast"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:text="อาหารเช้า"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateBreakfast"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="07:00 น."
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="0.25"
                    android:src="@drawable/ic_action_keyboard_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lunch"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:text="อาหารกลางวัน"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateLunch"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="12:00 น."
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:clickable="false"
                    android:src="@drawable/ic_action_keyboard_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dinner"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:text="อาหารเย็น"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateDinner"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="17:00 น."
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:clickable="false"
                    android:src="@drawable/ic_action_keyboard_arrow_right" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bed"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="20dp"
                android:weightSum="2">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:text="ก่อนนอน"
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/dateBed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.75"
                    android:background="@android:color/transparent"
                    android:backgroundTint="@color/nav_bar"
                    android:clickable="false"
                    android:editable="false"
                    android:focusable="false"
                    android:gravity="right"
                    android:text="22:00 น."
                    android:textColor="@color/cardview_dark_background"
                    android:textColorLink="@color/nav_bar"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="0.25"
                    android:clickable="false"
                    android:src="@drawable/ic_action_keyboard_arrow_right" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey"
                android:paddingBottom="5dp"
                android:paddingLeft="20dp"
                android:paddingTop="5dp"
                android:text="ตั้งค่าการแจ้งเตือน"
                android:textColor="@color/colorPrimaryDark" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Switch
                    android:id="@+id/switchSound"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:checked="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:text="เสียง"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="2">

                <Switch
                    android:id="@+id/switchVibrate"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:checked="true"
                    android:paddingLeft="20dp"
                    android:paddingRight="25dp"
                    android:text="สั่น"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</RelativeLayout>
